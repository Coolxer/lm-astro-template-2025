---
import { type Meta, type Schema } from "@components/core/MySEO.astro";

import BaseLayout from "@layouts/BaseLayout.astro";
import Navbar from "@components/ui/Navbar.astro";
import Footer from "@components/ui/Footer.astro";
type Props = {
  pageTitle?: string;
  pageDescription?: string;
  meta: Meta;
  schema?: Schema;
};

const { pageTitle, pageDescription, meta, schema } = Astro.props;
---

<BaseLayout meta={meta} schema={schema}>
  <div class="w-full flex justify-center">
    <div
      class="flex flex-col min-h-screen justify-between w-full shadow-primary"
    >
      <Navbar />
      <main class="w-full py-12 block">
        {
          pageTitle && (
            <header class="px-[5%] pt-4 md:pt-6 lg:pt-8">
              <div class="container max-w-lg text-center">
                <h1>{pageTitle}</h1>
                {pageDescription && <p class="md:text-md">{pageDescription}</p>}
                <slot name="header" />
              </div>
            </header>
          )
        }
        <slot />
      </main>
      <Footer />
    </div>
  </div>
</BaseLayout>
