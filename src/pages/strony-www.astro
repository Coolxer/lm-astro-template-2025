---
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

import { type Meta, type Schema } from "@components/core/MySEO.astro";
import { PORTFOLIO_CATEGORIES } from "~/content/schemas";

import PageLayout from "@layouts/PageLayout.astro";

import HeroImg from "@assets/images/pages/strony-www/strona-www.svg";

import Section from "@components/layout/Section.astro";
import Grid from "@components/layout/Grid.astro";
import Heading from "@components/ui/Heading.astro";
import Button from "@components/ui/Button.astro";
import MyImage from "@components/ui/MyImage.astro";
import IconList from "@components/ui/IconList.astro";

import PortfolioCard from "@components/collection/PortfolioCard.astro";
import ReviewCard from "@components/collection/ReviewCard.astro";

import FAQ from "@components/ui/FAQ.astro";
import CTA from "~/components/sections/CTA.astro";

const meta: Meta = {
  title: "Strony internetowe bez bólu głowy.",
  description:
    "Buduję strony, które po prostu działają. Bez ciągłych aktualizacji, abonamentów i stresu. Skup się na biznesie – resztą zajmie się Twoja nowa witryna.",
};

const schema: Schema = {
  "@context": "https://schema.org",
  "@type": "WebService",
  name: "Tworzenie szybkich i bezpiecznych stron internetowych",
  description:
    "Usługa budowy nowoczesnych stron internetowych w oparciu o architekturę Jamstack (Astro), zapewniających szybkość, bezpieczeństwo i niezależność od platform abonamentowych.",
  provider: {
    "@type": "Person",
    name: "Rola - Ekspert front-end",
  },
  serviceType: "Tworzenie stron internetowych",
  areaServed: "PL",
};

const relatedProjects = (
  await getCollection("portfolio", ({ data }) => {
    return (
      !data.draft && data.category && data.category === PORTFOLIO_CATEGORIES[0]
    );
  })
).slice(0, 2);

const relatedReviews = (
  await getCollection("reviews", ({ data }) => {
    return (
      !data.draft &&
      data.service &&
      data.service.includes(PORTFOLIO_CATEGORIES[0])
    );
  })
).slice(0, 2);
