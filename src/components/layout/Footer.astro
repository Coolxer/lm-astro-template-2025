---
import { Icon } from "astro-icon/components";
import Container from "@components/layout/Container.astro";
import { buildSlug } from "~/utils/utils";

const currentYear = new Date().getFullYear();

const footerLinks = [
  { text: "Blog", slug: "blog" },
  // { text: "Opinie", slug: "opinie" },
  { text: "Kontakt", slug: "kontakt" },
];

const socialLinks = [
  {
    icon: "tabler:brand-facebook",
    href: "https://www.facebook.com/profile.php?id=61556981469608",
    label: "Facebook",
  },
  {
    icon: "tabler:brand-linkedin",
    href: "https://www.linkedin.com/in/lukasz-milos/",
    label: "LinkedIn",
  },
  {
    icon: "tabler:brand-youtube",
    href: "https://www.youtube.com/@lukaszmilos",
    label: "YouTube",
  },
  {
    icon: "tabler:brand-github",
    href: "https://github.com/Coolxer",
    label: "GitHub",
  },
];

const companyInfo = {
  name: "Moc Cyfryzacji - Łukasz Miłoś",
  address: "39-305 Borowa, Polska",
  nip: "8172216931",
  regon: "529387133",
  email: "kontakt@lukaszmilos.pl",
  phone: "+48 123 456 789",
};
---

<footer class="bg-neutral text-neutral-content">
  <Container size="lg">
    <div class="py-12 md:py-16">
      {/* Główna sekcja - 2 kolumny */}
      <div class="flex flex-col md:flex-row justify-between gap-12">
        {/* LEWA KOLUMNA: Logo, opis i linki */}
        <div class="my-big-stack max-w-md">
          {/* Logo i opis */}
          <div class="my-stack">
            <a href="/" class="inline-block">
              <span class="text-2xl font-bold text-secondary">Łukasz Miłoś</span
              >
            </a>
            <p class="text-neutral-content/80 leading-relaxed">
              Pomagam firmom lepiej korzystać z technologii. Buduję strony
              internetowe, wdrażam systemy i automatyzacje.
            </p>
          </div>

          {/* Linki nawigacyjne */}
          <div class="my-stack">
            <p class="font-bold">Nawigacja</p>
            <ul class="flex flex-col gap-2">
              {
                footerLinks.map((link) => (
                  <li>
                    <a
                      href={buildSlug(link.slug)}
                      class="text-neutral-content/80 hover:text-primary transition-colors"
                    >
                      {link.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>

        {/* PRAWA KOLUMNA: Dane firmowe i kontakt */}
        <div class="my-big-stack max-w-md">
          {/* Dane firmowe */}
          <div class="my-stack">
            <p class="font-bold text-neutral-content">Dane firmowe</p>
            <div class="text-neutral-content/80 text-sm flex flex-col gap-1">
              <p class="font-medium">{companyInfo.name}</p>
              <p>{companyInfo.address}</p>
              <p>NIP: {companyInfo.nip}</p>
              <p>REGON: {companyInfo.regon}</p>
            </div>
          </div>

          {/* Kontakt */}
          <div class="my-stack">
            <p class="font-bold text-neutral-content">Kontakt</p>
            <div class="text-neutral-content/80 text-sm flex flex-col gap-2">
              <a
                href={`mailto:${companyInfo.email}`}
                class="hover:text-primary transition-colors flex items-center gap-2"
              >
                <Icon name="tabler:mail" class="size-4" />
                {companyInfo.email}
              </a>
              <!-- <a
                href={`tel:${companyInfo.phone}`}
                class="hover:text-primary transition-colors flex items-center gap-2"
              >
                <Icon name="tabler:phone" class="size-4" />
                {companyInfo.phone}
              </a> -->
            </div>
          </div>

          {/* Social media */}
          <div class="my-stack">
            <p class="font-bold text-neutral-content">Social media</p>
            <div class="flex gap-2">
              {
                socialLinks.map((social) => (
                  <a
                    href={social.href}
                    aria-label={social.label}
                    class="btn btn-circle btn-ghost btn-sm hover:bg-primary/10 hover:text-primary transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <Icon name={social.icon} class="size-5" />
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </div>

      {/* Separator */}
      <div class="divider divider-secondary my-8"></div>

      {/* Dolna sekcja */}
      <div
        class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm"
      >
        {/* Copyright */}
        <p class="text-neutral-content/80 text-center md:text-left">
          © {currentYear} Łukasz Miłoś. Wszystkie prawa zastrzeżone.
        </p>

        {/* Polityka prywatności */}
        <a
          href={buildSlug("polityka-prywatnosci")}
          class="text-neutral-content/80 hover:text-primary transition-colors"
        >
          Polityka prywatności
        </a>
      </div>
    </div>
  </Container>
</footer>
