---
import Logo from "@assets/icons/logo.svg";
import { Icon } from "astro-icon/components";
---

<footer class="px-[5%] py-12 md:py-18 lg:py-20 w-full">
  <div class="container">
    <div
      class="grid grid-cols-1 items-center justify-center justify-items-center gap-x-[4vw] gap-y-12 pb-12 md:pb-18 lg:grid-cols-[0.25fr_1fr_0.25fr] lg:justify-between lg:gap-y-4 lg:pb-20"
    >
      <a href={Astro.url.origin} class="lg:justify-self-start"
        ><Logo width={64} height={64} fill="currentColor" /></a
      >
      <ul
        class="grid grid-flow-row grid-cols-1 items-start justify-center justify-items-center gap-6 md:grid-flow-col md:grid-cols-[max-content] md:justify-center md:justify-items-start"
      >
        <li class="font-semibold"><a href="#">Link One</a></li>
        <li class="font-semibold"><a href="#">Link Two</a></li>
        <li class="font-semibold"><a href="#">Link Three</a></li>
      </ul>
      <div
        class="flex items-start justify-start justify-items-center gap-x-3 lg:justify-self-end"
      >
        {
          [
            {
              link: "#",
              icon: "tabler:brand-facebook",
            },
            {
              link: "#",
              icon: "tabler:brand-youtube",
            },
            {
              link: "#",
              icon: "tabler:brand-twitter",
            },
          ].map((item) => (
            <a href={item.link}>
              <Icon name={item.icon} class="size-6" stroke-width="1.5" />
            </a>
          ))
        }
      </div>
    </div>
    <div class="h-px w-full bg-black"></div>
    <div
      class="flex flex-col-reverse items-center justify-center justify-items-center pb-4 pt-6 text-sm md:flex-row md:gap-x-6 md:pb-0 md:pt-8"
    >
      <p class="mt-8 md:mt-0">
        © 2025 Łukasz Miłoś. Wszystkie prawa zastrzeżone.
      </p>
      <ul
        class="grid grid-flow-row grid-cols-[max-content] items-center justify-center justify-items-center gap-y-4 text-sm md:grid-flow-col md:gap-x-6 md:gap-y-0"
      >
        <li class="underline decoration-black underline-offset-1">
          <a href="/polityka-prywatnosci">Polityka prywatności</a>
        </li>
      </ul>
    </div>
  </div>
</footer>
