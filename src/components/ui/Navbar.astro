---
import Logo from "@assets/icons/logo.svg";
import { buildSlug } from "@utils/utils";
import Button from "./Button.astro";
---

<section id="navbar" class="sticky top-0 z-[999] bg-base-200 px-[5%]">
  <div class="container">
    <!-- Główny grid -->
    <div
      class="grid grid-cols-[1fr_auto] lg:grid-cols-[auto_1fr_auto] items-center gap-4 min-h-16 md:min-h-18"
    >
      <!-- Logo -->
      <a href={Astro.url.origin} class="justify-self-start">
        <Logo width={64} height={64} fill="currentColor" />
      </a>

      <!-- Menu nawigacyjne - desktop (środek) -->
      <nav class="hidden lg:flex lg:items-center lg:justify-center lg:gap-1">
        <a
          href={buildSlug("portfolio")}
          class="px-4 py-2 hover:text-primary transition-colors"
        >
          Portfolio
        </a>
        <a
          href={buildSlug("cennik")}
          class="px-4 py-2 hover:text-primary transition-colors"
        >
          Cennik
        </a>
        <a
          href={buildSlug("opinie")}
          class="px-4 py-2 hover:text-primary transition-colors"
        >
          Opinie
        </a>
        <a
          href={buildSlug("blog")}
          class="px-4 py-2 hover:text-primary transition-colors"
        >
          Blog
        </a>

        <!-- Dropdown -->
        <div id="dropdownWrapper" class="relative">
          <button
            id="dropdownToggle"
            class="flex items-center gap-2 px-4 py-2 hover:text-primary transition-colors"
          >
            <span>Link Four</span>
            <svg
              class="h-4 w-4 transition-transform duration-300 [.dropdown-open_&]:rotate-180"
              stroke="currentColor"
              fill="none"
              viewBox="0 0 15 15"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M3.13523 6.15803C3.3241 5.95657 3.64052 5.94637 3.84197 6.13523L7.5 9.56464L11.158 6.13523C11.3595 5.94637 11.6759 5.95657 11.8648 6.15803C12.0536 6.35949 12.0434 6.67591 11.842 6.86477L7.84197 10.6148C7.64964 10.7951 7.35036 10.7951 7.15803 10.6148L3.15803 6.86477C2.95657 6.67591 2.94637 6.35949 3.13523 6.15803Z"
                fill="currentColor"></path>
            </svg>
          </button>

          <nav
            id="dropdownMenu"
            class="absolute z-50 mt-2 min-w-[200px] rounded-md border border-base-200 bg-white p-2 shadow-lg opacity-0 translate-y-2 pointer-events-none [.dropdown-open_&]:opacity-100 [.dropdown-open_&]:translate-y-0 [.dropdown-open_&]:pointer-events-auto transition-all duration-200"
          >
            <a
              href="#"
              class="block px-4 py-2 rounded hover:bg-gray-50 transition-colors"
            >
              Link Five
            </a>
            <a
              href="#"
              class="block px-4 py-2 rounded hover:bg-gray-50 transition-colors"
            >
              Link Six
            </a>
            <a
              href="#"
              class="block px-4 py-2 rounded hover:bg-gray-50 transition-colors"
            >
              Link Seven
            </a>
          </nav>
        </div>
      </nav>

      <!-- Kontrolki po prawej -->
      <div class="flex items-center gap-4 justify-self-end">
        <!-- Przycisk - zawsze  -->
        <Button link="tel:{config.phoneNumber}" class="btn-primary inline-flex">
          Zadzwoń
        </Button>

        <!-- Theme Toggle - ZAWSZE widoczny -->
        <label class="swap swap-rotate">
          <input type="checkbox" class="theme-controller" value="dark" />

          <svg
            class="swap-off fill-current w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
            ></path>
          </svg>

          <svg
            class="swap-on fill-current w-6 h-6"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
          >
            <path
              d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
            ></path>
          </svg>
        </label>

        <!-- Hamburger - tylko mobile -->
        <button
          id="hamburger"
          class="-mr-2 flex size-12 flex-col items-center justify-center lg:hidden"
          aria-label="Toggle menu"
        >
          <span
            class="my-[3px] h-0.5 w-6 bg-black transition-all duration-300 origin-center [.menu-open_&]:translate-y-2 [.menu-open_&]:rotate-[-45deg]"
          ></span>
          <span
            class="my-[3px] h-0.5 w-6 bg-black transition-all duration-200 [.menu-open_&]:opacity-0"
          ></span>
          <span
            class="my-[3px] h-0.5 w-6 bg-black transition-all duration-300 origin-center [.menu-open_&]:-translate-y-2 [.menu-open_&]:rotate-45"
          ></span>
        </button>
      </div>
    </div>

    <!-- Menu mobilne - poza gridem -->
    <nav
      id="mobileMenu"
      class="h-0 overflow-hidden text-center transition-all duration-400 [.menu-open_&]:h-[100dvh] lg:hidden"
    >
      <a
        href={buildSlug("portfolio")}
        class="block py-3 text-base first:pt-7 hover:text-primary"
      >
        Portfolio
      </a>
      <a
        href={buildSlug("cennik")}
        class="block py-3 text-base first:pt-7 hover:text-primary"
      >
        Cennik
      </a>
      <a
        href={buildSlug("opinie")}
        class="block py-3 text-base hover:text-primary"
      >
        Opinie
      </a>
      <a
        href={buildSlug("blog")}
        class="block py-3 text-base hover:text-primary"
      >
        Blog
      </a>

      <!-- Dropdown mobile -->
      <div id="dropdownWrapperMobile" class="relative">
        <button
          id="dropdownToggleMobile"
          class="flex w-full items-center justify-center gap-2 py-3 text-base hover:text-primary transition-colors"
        >
          <span>Link Four</span>
          <svg
            class="h-4 w-4 transition-transform duration-300 [.dropdown-open_&]:rotate-180"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 15 15"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M3.13523 6.15803C3.3241 5.95657 3.64052 5.94637 3.84197 6.13523L7.5 9.56464L11.158 6.13523C11.3595 5.94637 11.6759 5.95657 11.8648 6.15803C12.0536 6.35949 12.0434 6.67591 11.842 6.86477L7.84197 10.6148C7.64964 10.7951 7.35036 10.7951 7.15803 10.6148L3.15803 6.86477C2.95657 6.67591 2.94637 6.35949 3.13523 6.15803Z"
              fill="currentColor"></path>
          </svg>
        </button>

        <nav id="dropdownMenuMobile" class="hidden [.dropdown-open_&]:block">
          <a
            href="#"
            class="block py-3 text-center hover:text-primary transition-colors"
          >
            Link Five
          </a>
          <a
            href="#"
            class="block py-3 text-center hover:text-primary transition-colors"
          >
            Link Six
          </a>
          <a
            href="#"
            class="block py-3 pb-7 text-center hover:text-primary transition-colors"
          >
            Link Seven
          </a>
        </nav>
      </div>
    </nav>
  </div>
</section>

<script>
  const navbar = document.getElementById("navbar");
  const hamburger = document.getElementById("hamburger");

  // Desktop dropdown
  const dropdownWrapper = document.getElementById("dropdownWrapper");

  // Mobile dropdown
  const dropdownWrapperMobile = document.getElementById(
    "dropdownWrapperMobile"
  );
  const dropdownToggleMobile = document.getElementById("dropdownToggleMobile");

  // Mobile menu toggle
  hamburger?.addEventListener("click", () => {
    const isOpen = navbar?.classList.toggle("menu-open");

    if (isOpen) {
      const scrollY = window.scrollY;
      document.body.style.position = "fixed";
      document.body.style.top = `-${scrollY}px`;
      document.body.style.width = "100%";
      window.scrollTo(0, 0);
    } else {
      const scrollY = document.body.style.top;
      document.body.style.position = "";
      document.body.style.top = "";
      document.body.style.width = "";
      window.scrollTo(0, parseInt(scrollY || "0") * -1);
    }
  });

  // Mobile dropdown toggle
  dropdownToggleMobile?.addEventListener("click", (e) => {
    e.stopPropagation();
    dropdownWrapperMobile?.classList.toggle("dropdown-open");
  });

  // Desktop dropdown hover
  dropdownWrapper?.addEventListener("mouseenter", () => {
    dropdownWrapper.classList.add("dropdown-open");
  });

  dropdownWrapper?.addEventListener("mouseleave", () => {
    dropdownWrapper.classList.remove("dropdown-open");
  });

  // Close mobile dropdown when clicking outside
  document.addEventListener("click", (e) => {
    if (
      dropdownWrapperMobile &&
      !dropdownWrapperMobile.contains(e.target as Node)
    ) {
      dropdownWrapperMobile.classList.remove("dropdown-open");
    }
  });

  // Handle resize
  window.addEventListener("resize", () => {
    if (window.innerWidth >= 1024) {
      navbar?.classList.remove("menu-open");
      document.body.style.position = "";
      document.body.style.top = "";
      document.body.style.width = "";
    }
  });
</script>
